{
  "name": "nextjs-auth-roles",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate --schema=prisma/schema.prisma && next build",
    "build:mobile": "prisma generate --schema=prisma/schema.prisma && next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate --schema=prisma/schema.prisma",
    "check-db": "tsx scripts/check-and-migrate.ts --check",
    "migrate-db": "tsx scripts/check-and-migrate.ts --migrate",
    "db-health": "tsx scripts/check-and-migrate.ts --health",
    "cap:sync": "npx cap sync",
    "cap:copy": "npx cap copy",
    "cap:ios": "npx cap open ios",
    "cap:android": "npx cap open android",
    "cap:build:ios": "npm run build:mobile && npx cap sync ios && npx cap open ios",
    "cap:build:android": "npm run build:mobile && npx cap sync android && npx cap open android"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.4.2",
    "@capacitor/android": "^8.0.0",
    "@capacitor/camera": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/filesystem": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@capacitor/network": "^8.0.0",
    "@capacitor/preferences": "^8.0.0",
    "@capacitor/push-notifications": "^8.0.0",
    "@prisma/client": "^5.18.0",
    "@supabase/supabase-js": "^2.81.1",
    "archiver": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.11.19",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "next": "14.2.5",
    "next-auth": "^4.24.7",
    "quill": "^2.0.3",
    "react": "^18",
    "react-dom": "^18",
    "react-quill": "^2.0.0",
    "recharts": "^3.4.1",
    "resend": "^6.1.2",
    "tesseract.js": "^7.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jspdf": "^1.3.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cross-env": "^10.1.0",
    "postcss": "^8",
    "prisma": "^5.18.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
