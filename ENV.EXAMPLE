###############################################################################
# Runtime URLs
###############################################################################
# Set to your deployed URL in production (Vercel will use this)
NEXTAUTH_URL=https://shoptofield.com/app

###############################################################################
# Secrets
###############################################################################
# Generate a 32-byte secret, e.g.:
#   openssl rand -base64 32
NEXTAUTH_SECRET=replace-with-a-secure-random-secret

###############################################################################
# Database (Supabase Postgres)
###############################################################################
# Use the pooled/transaction pooler connection string from Supabase
DATABASE_URL=postgresql://username:password@db.pooler.supabase.com:6543/postgres?pgbouncer=true
# Use the direct connection string for migrations/introspection
DIRECT_URL=postgresql://username:password@db.supabase.com:5432/postgres

###############################################################################
# Supabase (Storage + Project URL)
###############################################################################
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=replace-with-supabase-service-role-key
# Public bucket used for uploads
SUPABASE_BUCKET=uploads

###############################################################################
# Email (Resend) - optional in dev
###############################################################################
# If not set, verification emails are skipped (dev-friendly)
RESEND_API_KEY=re_placeholder_get_from_resend_com

###############################################################################
# Development helpers (local only)
###############################################################################
# Bypass auth middleware locally. Do NOT enable in production.
DEV_BYPASS_AUTH=true


